<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.betteridea"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.betteridea.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.betteridea.OptionActivity"
            android:label="@string/label_options" >
        </activity>
        <activity 
            android:name="com.betteridea.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
            
        </activity>
        <activity 
            android:name="com.betteridea.TopicActivity"
            android:label="@string/title_topic_activity"
            android:parentActivityName="com.betteridea.MainActivity" >
            
        </activity>
        <activity 
            android:name="com.betteridea.TopicCloseActivity"
            android:label="@string/title_topic_close_activity"
            android:parentActivityName="com.betteridea.MainActivity"
            android:launchMode="singleTop">
            
        </activity>
        <activity
            android:name="com.betteridea.RegisterActivity"
            android:label="@string/title_activity_register" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.betteridea.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.betteridea.StatsActivity"
            android:parentActivityName="com.betteridea.MainActivity"
            android:label="@string/title_activity_stats" >
        </activity>
        <activity
            android:name="com.betteridea.SplashScreenActivity"
            android:label="@string/title_activity_login" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
    </application>

</manifest>
