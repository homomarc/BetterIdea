<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<EditText android:id="@+id/edittext_topic_title"
	    android:layout_margin="5dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/edittext_topic_title"/>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_margin="5dp">
	    <Button 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_marginRight="5dp"
	        android:layout_height="wrap_content"
	        style="@style/button_style_green"
	        android:text="@string/button_idea_good"
	        android:onClick="goodIdea" />
	    <Button
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_marginRight="5dp"
		    android:layout_height="wrap_content"
		    style="@style/button_style_white"
		    android:text="@string/button_idea_valid"
		    android:onClick="validIdea"/>
		<Button
	    	android:layout_width="0dp"
	    	android:layout_weight="1"
	    	android:layout_height="wrap_content"
	   	 	style="@style/button_style"
	    	android:text="@string/button_idea_spam"
	    	android:onClick="reportSpam"/>
	</LinearLayout>
	
</LinearLayout>